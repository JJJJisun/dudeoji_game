<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".GameStage">

    <TextView
        android:id="@+id/tv_name_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Score"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_game_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_score"
        app:layout_constraintStart_toStartOf="@+id/tv_name_score"
        app:layout_constraintTop_toBottomOf="@id/tv_name_score" />

    <TextView
        android:id="@+id/tv_game_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="30"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_pause"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_rabbit_1"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="110dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/rabbit_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ib_rabbit_2"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/rabbit_on"
        app:layout_constraintBottom_toTopOf="@+id/ib_rabbit_5"
        app:layout_constraintStart_toEndOf="@+id/ib_rabbit_1" />

    <ImageButton
        android:id="@+id/ib_rabbit_3"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/rabbit_on"
        app:layout_constraintBottom_toTopOf="@+id/ib_rabbit_6"
        app:layout_constraintEnd_toStartOf="@+id/ib_rabbit_4" />

    <ImageButton
        android:id="@+id/ib_rabbit_4"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="110dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/rabbit_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/ib_rabbit_5"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="36dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/rabbit_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ib_rabbit_1" />

    <ImageButton
        android:id="@+id/ib_rabbit_6"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="36dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/rabbit_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ib_rabbit_4" />


</androidx.constraintlayout.widget.ConstraintLayout>